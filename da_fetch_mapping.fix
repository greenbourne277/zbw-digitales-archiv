# ZDB-ID bei Zeitschriften
do marc_each()
  if marc_any_match('7737|||s','s')
    if marc_any_match('773w','(DE-600)')
	  marc_replace_all('773w','^((?!DE-600).)*$','')
	  marc_replace_all('773w','^(\(DE-600\))(\d{7}-[\dxX]{1}$)','$2')
	  marc_map('773w','relation\.journalzdbid')
	end
  end
end

# ZDB-ID bei Serien
