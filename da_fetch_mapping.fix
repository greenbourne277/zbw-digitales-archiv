  if marc_any_match('810w','(DE-600)')
	marc_replace_all('810w','^((?!DE-600).)*$','')
	marc_replace_all('810w','^(\(DE-600\))(\d{7}-[\dxX]{1}$)','$2')
	marc_map('810w','relation\.serieszdbid')
  end
end

